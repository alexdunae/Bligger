<h2>Welcome to your Blig!</h2>
<% controller.all_posts.each do |post| %>
<div id="post<%= post.id %>">
<strong><%= link_to post.title, post, :class=>'post_title' %></strong><br>
<%= post.body.html_safe %><br>
Published: <%= post.created_at %><br>
<% if can? :manage, post %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Delete', post, :method=>:delete, format: :js, remote: true %><br>
<% end %><hr style="width:40%;">
</div>
<% end %>
