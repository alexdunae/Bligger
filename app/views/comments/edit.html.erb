<h2>Sup Homie! Create a new Plost</h2>
<%= form_for [@the_post, @the_comment] do |f| %>
<%= f.label :name, :value=>'User: '+@the_comment.name %><br>
<%= f.label 'Content' %><br>
<%= f.text_area :body, :class=>'wysihtml5' %><br>
<%= f.submit 'Edit', :class=>'form-control',:style=>"width:90px;background:#afa;"%>
<% end %>
